{
  "name": "vui-input",
  "version": "0.5.0",
  "description": "Mixins and CSS for applying input styles",
  "scripts": {
    "clean": "rimraf *.css",
    "prebuild": "npm run clean",
    "build": "npm run build:sass:css && npm run build:less:css",
    "prebuild:less:css": "imgtoless -p vui- -o input-icons.less *.png",
    "build:less:autoprefix": "postcss --use autoprefixer input-less.css -o input-less.css",
    "build:less:css": "lessc input.css.less > input-less.css && npm run build:less:autoprefix",
    "postbuild:less:css": "csslint input-less.css",
    "build:sass:autoprefix": "postcss --use autoprefixer input.css -o input.css",
    "prebuild:sass:css": "imgtoscss -p vui- -o input-icons.scss *.png",
    "build:sass:css": "node-sass --output-style expanded input.css.scss input.css && npm run build:sass:autoprefix",
    "postbuild:sass:css": "csslint input.css",
    "pretest": "npm run build",
    "test": "karma start karma.conf.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Brightspace/valence-ui-input.git"
  },
  "keywords": [
    "d2l",
    "valence-ui",
    "vui"
  ],
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Brightspace/valence-ui-input/issues"
  },
  "homepage": "https://github.com/Brightspace/valence-ui-input",
  "dependencies": {
    "vui-focus": "^0.6.0",
    "vui-typography": "^0.4.0"
  },
  "devDependencies": {
    "autoprefixer": "^5.2.0",
    "csslint": "^0.10.0",
    "images-to-variables": "^0.2.1",
    "jasmine-dom-matchers": "^0.1.0",
    "karma": "^0.12.32",
    "karma-phantomjs-launcher": "^0.1.4",
    "karma-jasmine": "^0.3.5",
    "karma-cli": "0.0.4",
    "less": "^2.5.1",
    "node-sass": "^3.1.1",
    "postcss-cli": "^1.3.1",
    "rimraf": "^2.3.4"
  }
}

{
  "name": "vui-input",
  "version": "1.0.2",
  "description": "Mixins and CSS for applying input styles",
  "scripts": {
    "clean": "rimraf *.css",
    "prebuild": "npm run clean && imgtoscss -p vui- -o input-icons.scss *.png",
    "build:autoprefix": "postcss -c postcss.config.json",
    "build": "node-sass --output-style expanded input.css.scss input.css && npm run build:autoprefix",
    "postinstall": "./node_modules/.bin/bower install",
    "pretest": "npm run build",
    "test": "csslint input.css"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Brightspace/valence-ui-input.git"
  },
  "keywords": [
    "d2l",
    "valence-ui",
    "vui"
  ],
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Brightspace/valence-ui-input/issues"
  },
  "homepage": "https://github.com/Brightspace/valence-ui-input",
  "dependencies": {
    "bower": "^1.5.2"
  },
  "devDependencies": {
    "autoprefixer": "^6.1.2",
    "csslint": "^0.10.0",
    "images-to-variables": "^0.2.1",
    "node-sass": "^3.1.1",
    "postcss-cli": "^2.3.2",
    "rimraf": "^2.3.4"
  }
}
